<%- include("../common/header.ejs") %>
    <link rel="stylesheet" href="/css/book.css">
    <link rel="stylesheet" href="/css/details.css">
    <link rel="stylesheet" href="/css/filter.css">
    </head>

    <body>
        <div class="container">
            <%- include("../common/navbar.ejs") %>
            <%-include("../common/error.ejs") %>
                <div class="add-btn">
                    <h2 class="sub-heading">Member Details</h2>
                    <a href="/member/add-member">Add New Member</a>


                </div>
                <div class="memberFilter">
                <%-include("../common/filter-member.ejs") %>
                </div>
                 <div class="main-details">

                   
                   
                        <table class="table-main">
                            <thead class="main-row">
                                <tr>
                                    <th>MEMBER ID</th>
                                    <th>MEMBER NAME</th>
                                    <th>MEMBER EMAIL</th>
                                    <th>MEMBER TYPE</th>
                                    <th>MEMBERSHIP STATUS</th>
                                    <th>ACTION</th>

                                </tr>
                            </thead>
                            <tbody class="table-body">
                                <% member.map( m=>{ %>
                                    <tr>
                                        <th>
                                            <%= m.uId %>
                                        </th>
                                        <th>
                                            <%= m.name %>
                                        </th>
                                        <th>
                                            <%=m.email %>
                                        </th>
                                        <th>
                                            <%= m.memberType %>
                                        </th>
                                        <th>
                                            <%= m.membershipStatus %>
                                        </th>
                                        <th>
                                            <div class="actions">
                                                <a href="/member/edit-member/<%= m._id %>?edit=true"
                                                    class="edit-btn">Edit</a>

                                                <a href="/member/delete-member/<%= m._id %>"
                                                    class="delete-btn">Delete</a>




                                            </div>
                                        </th>
                                    </tr>

                                    <% }) %>

                            </tbody>

                        </table>
                       
                   
                  

         </div>

        
    </div>
    <script src="/js/reset-member-filter.js"></script>
    
</body>
</html>